
# Launch a bash session inside a running container:
# $ _bash api_web_1
#
function _bash() {
    docker exec -it $1 bash
}

# From any bash session, points Docker to the default VM
# $ _vm
#
function _vm() {
    eval "$(docker-machine env default)"
    env|sort|grep DOCKER
}

function _shell() {
    docker exec -it api_web_1 /venv/api/bin/python manage shell
}

function _recreate() {
    docker exec -t api_rq_git_1 /venv/api/bin/python manage data recreate
}

function _populate() {
    docker exec -t api_rq_git_1 /venv/api/bin/python manage data populate
}

function _log_cache() {
    docker exec -t api_cache_1 tail -f /log/cache.log
}

function _access_log() {
    docker exec -t api_web_1 tail -f /log/access.log
}

function _error_log() {
    docker exec -t api_web_1 tail -f /log/error.log
}

function _web_log() {
    docker exec -t api_web_1 tail -f /log/rebase_web.log
}

function _super() {
    docker exec -t api_rq_git_1 /venv/super/bin/supervisorctl -c /etc/git/supervisor.conf
}
