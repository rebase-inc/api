FROM alpine

RUN apk update && \
    apk add \
        --no-cache \
        libpq \
        python3 && \
    pyvenv /venv/rq && \
    source /venv/rq/bin/activate && \
    pip install \
        --no-cache-dir \
        --upgrade pip

COPY ./requirements.txt /requirements.txt

COPY ./wheels/ /wheels/

RUN source /venv/rq/bin/activate && \
    pip install \
        --no-cache-dir \
        --requirement /requirements.txt \
        --find-links /wheels && \
    rm -rf /wheels

WORKDIR /api

CMD ["/venv/rq/bin/python", "rq-population.py"]
