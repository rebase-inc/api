# #
# Search recursively for pattern in python files located in rebase/.
# $ py register_route
#
py () {
	grep -rn --exclude *.pyc --exclude *.swp --color=auto $1 rebase
}


#
# Create user in Rebase
# -X POST -d "first_name":$1,"last_name":$2,"email":$3,"password":$4 \
#
rebase-new-user () {
	curl \
	--trace "-" \
	-L \
	-c /tmp/session.txt \
	-H "Content-Type: application/json" \
	-X POST -d "{\"first_name\": \"$1\", \"last_name\":\"$2\", \"email\":\"$3\", \"password\":\"$4\"}" \
	http://localhost:5000/users
}

#
# Login to Rebase
# 
rebase-login () {
	curl \
	-L \
	-c /tmp/session.txt \
	-H "Content-Type: application/json" \
	-X POST -d "{ \"user\": {\"email\": \"$1\"}, \"password\": \"$2\"}" \
	http://localhost:5000/auth
}
