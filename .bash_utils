# #
# Search recursively for pattern in python files located in rebase/.
# $ py register_route
#
py () {
	grep -rn --exclude *.pyc --exclude *.swp --color=auto "$1" rebase
}


#export REBASE_HOST=http://rebase-pro.herokuapp.com
export REBASE_HOST=http://127.0.0.1:5000
export REBASE_COOKIE_JAR=/tmp/rebase-cookie-jar.txt

rebase-curl () {
	curl \
	-L \
	-b $REBASE_COOKIE_JAR \
	-c $REBASE_COOKIE_JAR \
	-H "Content-Type: application/json" \
	-X $1 \
	-d "$2" \
	 $REBASE_HOST/$3
}

#
## GET something from Rebase
# $ rebase-get /skill_set
#
rebase-get () {
	rebase-curl GET "{}" $1
}

#
# POST to rebase
# e.g.:
# rebase-post "{\"first_name\": \"$1\", \"last_name\":\"$2\", \"email\":\"$3\", \"password\":\"$4\"}" users
#
rebase-post () {
	rebase-curl POST "$1" $2
}

#
# Create user in Rebase
# $ rebase-new-user Joe Blow joe@blow.org foobar
#
rebase-new-user () {
	rebase-post \
	"{\"first_name\": \"$1\", \"last_name\":\"$2\", \"email\":\"$3\", \"password\":\"$4\"}" \
	users
}

#
# Login to Rebase
# $ rebase-login you@mail.com password
# 
rebase-login () {
	rebase-post \
	"{ \"user\": {\"email\": \"$1\"}, \"password\": \"$2\"}" \
	auth
}

#
## Logout from Rebase
## $ rebase-logout
##
rebase-logout () {
	rebase-get auth
	echo
	echo "Goodbye!"
}

extract_session () {
	awk "/$1.*session/ { printf(\"%s=%s\", \$6, \$7) }" $REBASE_COOKIE_JAR
}
extract_remember () {
	awk "/$1.*remember_token/ { printf(\"%s=%s\", \$6, \$7) }" $REBASE_COOKIE_JAR
}

abc () {
	session=`extract_session heroku`
	remember=`extract_remember heroku`
	cookies="$remember; $session" 
	ab -C "$cookies" $*
}

abl () {
	session=`extract_session localhost`
	remember=`extract_remember localhost`
	cookies="$remember; $session" 
	ab -C "$cookies" $*
}

genkey () {
	python -c "
from string import ascii_lowercase
from os import urandom
key = ''.join(map(lambda char: ascii_lowercase[char % (len(ascii_lowercase)-1)], urandom(512)))
print(key)
"

}
